import {
	IAuthenticateGeneric,
	ICredentialTestRequest,
	ICredentialType,
	INodeProperties,
} from 'n8n-workflow';

export class DcTrackApi implements ICredentialType {
	name = 'dcTrackApi';
	displayName = 'dcTrack API';
	documentationUrl = 'https://www.sunbirddcim.com/';
	properties: INodeProperties[] = [
		{
			displayName: 'Base URL',
			name: 'baseUrl',
			type: 'string',
			default: 'https://your-dctrack-instance.com',
			placeholder: 'https://dctrack.company.com',
			description: 'The base URL of your dcTrack instance',
			required: true,
		},
		{
			displayName: 'API Key',
			name: 'apiKey',
			type: 'string',
			typeOptions: {
				password: true,
			},
			default: '',
			placeholder: 'your-api-key-here',
			description: 'The API key for authenticating with dcTrack',
			required: true,
		},
	];

	// How n8n should authenticate with dcTrack
	authenticate: IAuthenticateGeneric = {
		type: 'generic',
		properties: {
			headers: {
				'Authorization': '={{"Bearer " + $credentials.apiKey}}',
				'Content-Type': 'application/json',
			},
		},
	};

	// Test the credentials
	test: ICredentialTestRequest = {
		request: {
			baseURL: '={{$credentials.baseUrl}}',
			url: '/api/v2/items',
			method: 'GET',
			qs: {
				limit: 1,
			},
		},
	};
}
